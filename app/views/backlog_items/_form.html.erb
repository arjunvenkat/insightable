<%= form_for(@backlog_item, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @backlog_item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@backlog_item.errors.count, "error") %> prohibited this backlog_item from being saved:</h4>

      <ul>
      <% @backlog_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :backlog_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :backlog_id, Backlog.all, :id, :mission_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :question_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :question_id, Question.all, :id, :contents, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :position, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :assigned_to, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :assigned_to, User.all, :id, :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
