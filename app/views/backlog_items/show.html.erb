<div class="page-header">
  <%= link_to backlog_items_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_backlog_item_path(@backlog_item), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show backlog_item</h1>
</div>

<dl class="dl-horizontal">
  <dt>Backlog:</dt>
  <dd><%= @backlog_item.backlog_id %></dd>

  <dt>Question:</dt>
  <dd><%= @backlog_item.question_id %></dd>

  <dt>Position:</dt>
  <dd><%= @backlog_item.position %></dd>

  <dt>Assigned to:</dt>
  <dd><%= @backlog_item.assigned_to %></dd>

</dl>
