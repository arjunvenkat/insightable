<div class="page-header">
  <%= link_to environments_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_environment_path(@environment), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show environment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @environment.name %></dd>

  <dt>Desc:</dt>
  <dd><%= @environment.desc %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag @environment.image.url(:medium) %></dd>

</dl>
