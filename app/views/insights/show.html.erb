<div class="page-header">
  <%= link_to insights_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_insight_path(@insight), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show insight</h1>
</div>

<dl class="dl-horizontal">
  <dt>Contents:</dt>
  <dd><%= @insight.contents %></dd>

  <dt>Insightable:</dt>
  <dd><%= @insight.insightable_id %></dd>

  <dt>Insightable type:</dt>
  <dd><%= @insight.insightable_type %></dd>

  <dt>User:</dt>
  <dd><%= @insight.user.name %></dd>

</dl>
