<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">New Picture</h3>
      </div>
      <div class="panel-body">
        <%= form_for(@picture, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
          <% if @picture.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h4>

              <ul>
              <% @picture.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
              <%= f.hidden_field :pictureable_id, value: @picture.pictureable_id, :class => "form-control" %>
          </div>
          <div class="form-group">
              <%= f.hidden_field :pictureable_type, value: @picture.pictureable_type, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :caption, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :caption, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :image_url, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.file_field :image_url, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit :class => "btn btn-primary" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

