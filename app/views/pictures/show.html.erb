<div class="page-header">
  <%= link_to pictures_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_picture_path(@picture), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show picture</h1>
</div>

<dl class="dl-horizontal">
  <dt>Pictureable:</dt>
  <dd><%= @picture.pictureable_id %></dd>

  <dt>Pictureable type:</dt>
  <dd><%= @picture.pictureable_type %></dd>

  <dt>Caption:</dt>
  <dd><%= @picture.caption %></dd>

  <dt>Image:</dt>
  <dd><%= link_to(image_tag(@picture.image_url.url(:medium)), @picture.image_url.url)  %></dd>

</dl>
