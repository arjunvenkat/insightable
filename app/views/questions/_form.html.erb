<%= form_for(@question, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h4>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :contents, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :contents, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :questionable_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :questionable_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :questionable_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :questionable_type, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
