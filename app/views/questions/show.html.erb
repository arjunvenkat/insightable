<div class="page-header">
  <%= link_to questions_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_question_path(@question), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show question</h1>
</div>

<dl class="dl-horizontal">
  <dt>Contents:</dt>
  <dd><%= @question.contents %></dd>

  <dt>Questionable:</dt>
  <dd><%= @question.questionable_id %></dd>

  <dt>Questionable type:</dt>
  <dd><%= @question.questionable_type %></dd>

</dl>
